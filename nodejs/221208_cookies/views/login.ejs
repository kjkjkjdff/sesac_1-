        function login(){
                var form =document.getElementById("form_info"); 
                axios({
                    method: "post",
                    url: "/login", 
                    data:{ id: form.id.value,
                        pw: form.pw.value}
                }).then(function(res){
                    alert(res.data);
                    window.location.href = '/';
                });
            
            }
          
    </script>
 

